<div class="row">
  <div class="col-md-4">
    <h4><span class="glyphicon glyphicon-tree-deciduous"></span> Create your account</h4>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors resource %>
      <%= f.input :name, required: true, wrapper: :group, placeholder: 'Full name (i.e: John Doe)' %>
      <%= f.input :email, required: true, wrapper: :group %>
      <%= f.input :password, required: true, wrapper: :group %>
      <%= f.input :password_confirmation, required: true, wrapper: :group %>
      <%= f.button :submit, 'Sign up', class: 'btn btn-primary btn-submit' %>
    <% end %>
  </div>
</div>

