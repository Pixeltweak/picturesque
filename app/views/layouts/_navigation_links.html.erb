<% if user_signed_in? %>
  <li>
    <%= link_to new_photo_path do %>
      <i class="glyphicon glyphicon-cloud-upload"> Upload</i>
    <% end %>
  </li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= image_tag current_user.avatar.url(:thumb), class: 'header-avatar' %>
      <%= current_user.name %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Edit account', edit_user_registration_path %></li>
      <li><%= link_to 'My Profile', user_path(current_user.id) %></li>
      <li class="divider"></li>
      <li><%= link_to 'Logout', destroy_user_session_path, method: 'delete' %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to content_tag(:strong, 'Create an account'), new_user_registration_path %></li>
  <li><%= link_to 'Sign in', new_user_session_path %></li>
<% end %>
